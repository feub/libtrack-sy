<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>
      {% block title %}
        Welcome!
      {% endblock %}
    </title>
    <link rel="icon" type="image/png" href="{{ asset('favicon/favicon-16x16.png') }}"/>
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon/favicon-16x16.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('favicon/favicon-32x32.png') }}">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('favicon/apple-touch-icon.png') }}">
    <link rel="manifest" href="{{ asset('favicon/site.webmanifest') }}"> {% block stylesheets %}{% endblock %}

    {% block javascripts %}
      {% block importmap %}
        {{ importmap('app') }}
      {% endblock %}
    {% endblock %}
  </head>
  <body class="bg-global min-h-screen flex flex-col">
    <div class="container mx-auto flex-grow flex flex-col"> {% block body %}{% endblock %}
      </div>
    </body>
  </html>
