{% extends 'base.html.twig' %}

{% block title %}Hello ArtistController!{% endblock %}

{% block body %}
<div class="max-w-screen-xl mx-auto">

    <div class="flex justify-between items-center">
    <h1 class="title mb-4">Artists ({{ artists.getTotalItemCount() }})</h1>
    <a href="{{ path('artist.create') }}" class="text-zinc-500 hover:text-zinc-400 mr-8">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-8">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
        </svg>
    </a>
    </div>

    <div class="relative overflow-x-auto">
        <table class="table-table">
            <thead class="table-thead">
                <tr>
                    <th scope="col" class="px-6 py-3">{{ knp_pagination_sortable(artists, 'Name', 'a.name') }}</th>
                    <th class="text-right"></th>
                </tr>
            </thead>
            <tbody>
                {% for artist in artists %}
                <tr class="table-tr">
                    <td scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        {{ artist.name }}
                    </td>
                    <td class="px-6 py-4 text-right">
                        <a href="{{ path('artist.edit', {id: artist.id}) }}" class="btn-primary">Edit</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="my-4">
            {{ knp_pagination_render(artists, 'partials/tailwind_pagination.html.twig') }}
        </div>
    </div>

</div>
{% endblock %}
