{% extends 'base.html.twig' %}

{% block title %}Hello ArtistController!{% endblock %}

{% block body %}
<div class="max-w-screen-xl mx-auto">

    <h1 class="font-bold text-3xl text-slate-500 mb-4">Artists ({{ artists.getTotalItemCount() }})</h1>

    <div class="relative overflow-x-auto">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">{{ knp_pagination_sortable(artists, 'Name', 'a.name') }}</th>
                    <th class="text-right"></th>
                </tr>
            </thead>
            <tbody>
                {% for artist in artists %}
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 border-gray-200">
                    <td scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        {{ artist.name }}
                    </td>
                    <td class="px-6 py-4 text-right">
                        <a href="{{ path('artist.edit', {id: artist.id}) }}" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-3 py-1.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Edit</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="my-4">
            {{ knp_pagination_render(artists, 'partials/tailwind_pagination.html.twig') }}
        </div>
    </div>

</div>
{% endblock %}
